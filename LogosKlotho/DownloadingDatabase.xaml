<Window x:Class="LogosKlotho.DownloadingDatabase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogosKlotho"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="DownloadingDatabase" Height="130" Width="340" Closing="Window_Closing">

    
    <StackPanel>
        <TextBlock TextWrapping="Wrap" Text="データベースをダウンロードしています..." Margin="10,5,10,0" Name="status"/>
        <ProgressBar Value="{Binding ProgressValue, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Height="50" Margin="10,10" Name="progress1" />
    </StackPanel>
</Window>
